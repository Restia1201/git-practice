<% if flash[:notice] %>
  <p id="notice">
   <%= flash[:notice] %>
  </p>
 <% end %>


<div class="container px-5 px-sm-0">
 <div class="row">
  <div class="col-md-3">
   <%= render 'books/list', book: @book %>
  </div>
  <div class="col-md-8 offset-md-1">
   <h2>Book detail</h2>
   <table class="table">
    <tbody>
     <tr>
      <td><%= image_tag @find_book.get_image %></td>
      <td><%= @find_book.title %></td>
      <td><%= @find_book.body %></td>
      <% if @find_book.user == current_user %>
       <td><%= link_to 'Edit', edit_book_path(@find_book.id), class: "btn btn-sm btn-success" %></td>
      <% end %>
      <% if @find_book.user == current_user %>
       <td><%= link_to 'Destroy', book_path(@find_book.id), method: :delete, data: { confirm: "本当に削除しますか？"}, class: "btn btn-sm btn-danger" %></td>
      <% end %>
     </tr>
    </tbody>
   </table>
  </div>
 </div>
</div>