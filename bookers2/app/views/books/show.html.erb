<% if flash[:notice] %>
  <p id="notice">
   <%= flash[:notice] %>
  </p>
 <% end %>


<div class="container px-5 px-sm-0">
 <div class="row">
  <div class="col-md-3">
   <%= render 'books/list', book: @book %>
  </div>
  <div class="col-md-8 offset-md-1">
   <h2>Book detail</h2>
   <table class="table">
    <tbody>
     <tr>
      <td><%= image_tag @book.get_image %></td>
      <td><%= @book.title %></td>
      <td><%= @book.body %></td>

       <td><%= link_to 'Edit', edit_book_path(@book.id) %></td>


       <td><%= link_to 'Destroy', book_path(@book), method: :delete, data: { confirm: "本当に削除しますか？"} %></td>

     </tr>
    </tbody>
   </table>
  </div>
 </div>
</div>