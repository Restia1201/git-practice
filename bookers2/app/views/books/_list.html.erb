<h2>User info</h2>

 <table class="table">
  <tbody>
   <tr></tr>
   <tr>
    <th>name</th><br>
    <th><%= current_user.name %></th>
   </tr>
   <tr>
    <th>introduction</th>
    <th><%= current_user.introduction %></th>
   </tr>
  </tbody>
 </table>
 <div class="row">
  <div class="btn btn-outline-secondary btn-block">
   <i class="fa-solid fa-user-gear"></i>
   <%= link_to edit_user_path(current_user.id) %>
  </div>
 </div>

<h2>New Book</h2>
 <%= form_with model: @book do |f| %>

  <p>Title</p>
   <%= f.text_field :title %>

  <p>Opinion</p>
   <%= f.text_area :body %><br>

  <%= f.submit 'Create Book' %>
 <% end %>