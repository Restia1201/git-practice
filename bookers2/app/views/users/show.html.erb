<!--部分点プレート-->
<div class="container px-5 px-sm-0"></div>
 <div class="row">
  <div class="col-md-3">
   <%= render 'books/list', books: @books %>
  </div>
  <div class="col-md-8 offset-md-1">
   <h2>Users</h2>
   <table class="table table-hover table-inverse">
    <thead>
     <tr>
      <th></th>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
     </tr>
    </thead>
    <tbody>
     <tr>
      <td></td>
      <td></td>
      <td></td>
     </tr>
    </tbody>
   </table>
  </div>
 </div>


<!--１人ユーザーの投稿一覧-->
<% @books.each do |book| %>
 <div>
  <%= link_to book_path(book.id) do %>
    <%= image_tag book.get_image %>
  <% end %>
  <p>Title: <%= book.title %></p>
  <p>Opinion: <%= book.body %></p>
 </div>
<% end %>